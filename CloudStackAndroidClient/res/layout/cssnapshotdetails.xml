<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/csvmdetails"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="match_parent"
	android:layout_height="match_parent" >
	
	<fragment android:id="@+id/cssnapshotdetailsfragment"
		class="com.creationline.cloudstack.ui.CsSnapshotDetailsFragment"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_alignParentTop="true" android:layout_alignParentRight="true" >
	</fragment>
		
	<TextSwitcher android:textAppearance="?android:attr/textAppearanceSmall"
		android:id="@+id/errorLogTextView" android:text="error log"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
		android:focusable="false" android:focusableInTouchMode="false"
		android:layout_alignParentRight="true" android:fadingEdge="horizontal"></TextSwitcher>

</RelativeLayout>
