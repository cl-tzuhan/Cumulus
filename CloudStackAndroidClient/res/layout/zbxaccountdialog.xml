<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="wrap_content"
	android:background="@color/zbxlogin_background"
	android:orientation="vertical" >
	<TextView android:id="@+id/zbxtitle"
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_marginTop="0dp" android:layout_marginBottom="0dp"
		android:paddingLeft="7dp"
		android:textSize="25sp" android:textColor="@color/label"
		android:text="Zabbix" />    
	<TextView
		android:layout_width="match_parent" android:layout_height="wrap_content"
		android:layout_marginTop="-10dp" android:layout_marginBottom="0dp"
		android:paddingLeft="7dp"
		android:textSize="15sp" android:textColor="@color/label"
		android:text="integration" />    
	<fragment android:id="@+id/zbxaccountfragment"
		class="com.creationline.cloudstack.ui.ZbxAccountFragment"
		android:layout_width="match_parent" android:layout_height="wrap_content" >
	</fragment>
</LinearLayout>
		
